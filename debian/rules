#!/usr/bin/make -f

export DH_OPTIONS

%:
	dh $@ --with python3

override_dh_auto_install:
	python setup.py \
	install \
	--install-lib=usr/share/cloud-installer/ \
	--install-data=usr/ \
	--install-scripts=usr/share/cloud-installer/ \
	--root=$(CURDIR)/debian/cloud-installer/ \
	--no-compile -O0

override_dh_clean:
	rm -rf build/
	rm -rf dist/
	find . -name '*.pyc' -delete
